{
  "name": "@devtin/schema-validator",
  "author": "Martin Rafael <tin@devtin.io>",
  "version": "1.2.0",
  "description": "Zero-dependencies, light-weight library for duck-type validating & sanitizing javascript's data schemas.",
  "keywords": [
    "duck-type",
    "duck-typing",
    "sanitize"
  ],
  "main": "dist/schema-validator.js",
  "module": "dist/schema-validator.esm.js",
  "browser": "dist/schema-validator.iife.js",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/devtin/schema-validator"
  },
  "scripts": {
    "build": "yarn build:lib && yarn build:docs && yarn build:readme",
    "build:docs": "jsdoc2md --template DOCS.hbs --files dist/schema-validator.js > DOCS.md",
    "build:lib": "rollup -c",
    "build:live": "nodemon -w src --exec yarn build",
    "build:readme": "node build/readme.js",
    "lint": "eslint --ext .js --ignore-path .gitignore src/",
    "test": "NODE_ENV=test ava --serial --verbose",
    "test:all": "NODE_ENV=test ava --serial --verbose test/*.test.js test/types/*.test.js",
    "test:browser": "cp dist/schema-validator.iife.js sandbox/ && light-server -s sandbox -p 3000 -o",
    "prepublishOnly": "yarn lint && yarn build && yarn test:all && echo 'Looks good for a release!'",
    "release": "standard-version",
    "postpublish": "git push && git push --tags"
  },
  "devDependencies": {
    "@pleasure-js/docs": "^1.0.0-beta",
    "ava": "^2.4.0",
    "babel-eslint": "^10.0.3",
    "bluebird": "^3.7.2",
    "eslint": "^6.8.0",
    "jsdoc-to-markdown": "^5.0.3",
    "lodash": "^4.17.15",
    "mustache": "^3.2.0",
    "nodemon": "^2.0.2",
    "rollup": "^1.27.14",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-babel-minify": "^9.1.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "standard-version": "^7.1.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  }
}
