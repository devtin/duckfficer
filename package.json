{
  "name": "@devtin/schema-validator",
  "author": "Martin Rafael <tin@devtin.io>",
  "version": "3.3.0",
  "description": "Zero-dependencies, light-weight library for modeling, validating & sanitizing javascript data schemas",
  "keywords": [
    "json",
    "duck-type",
    "duck-typing",
    "sanitize",
    "type",
    "typing",
    "schema",
    "validation",
    "validating",
    "validator",
    "cast",
    "casting",
    "modeling"
  ],
  "main": "dist/schema-validator.js",
  "module": "dist/schema-validator.esm.js",
  "browser": "dist/schema-validator.umd.js",
  "license": "MIT",
  "files": [
    "dist/*",
    "src/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/devtin/schema-validator"
  },
  "homepage": "https://devtin.github.io/schema-validator",
  "scripts": {
    "build": "npm run build:lib && npm run build:api && npm run build:docs && npm run build:readme",
    "build:wcoverage": "npm run build:lib && npm run coverage && npm run build:api && npm run build:docs && npm run build:readme",
    "build:api": "jsdoc2md --template build/template/DOCS.hbs --files dist/schema-validator.js > docs/api.md",
    "build:lib": "rollup -c && gzip -c dist/schema-validator.umd.js > dist/schema-validator.umd.js.gz",
    "build:live": "nodemon -w src -w test --exec npm run build",
    "build:readme": "node build/readme.js",
    "build:docs": "node build/docs.js",
    "lint": "eslint --ext .js --ignore-path .gitignore src/",
    "test": "NODE_ENV=test ava",
    "test:unit": "npm run test src/**/*.unit.js",
    "test:browser": "cp dist/schema-validator.umd.js sandbox/ && light-server -s sandbox -p 3000 -o",
    "prepublishOnly": "npm run lint && npm run build:wcoverage && npm run test && echo 'Looks good for a release!'",
    "release": "standard-version -a",
    "postpublish": "git push && git push --tags",
    "coverage": "nyc --reporter=json-summary --reporter=lcov npm run test"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@pleasure-js/docs": "^1.2.1-beta",
    "ava": "^3.11.0",
    "babel-eslint": "^10.1.0",
    "bluebird": "^3.7.2",
    "eslint": "^7.5.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "esm": "^3.2.25",
    "jsdoc-to-markdown": "^6.0.1",
    "lodash": "^4.17.19",
    "mustache": "^4.0.1",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "rollup": "^2.23.0",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-terser": "^6.1.0",
    "standard-version": "^8.0.2"
  },
  "ava": {
    "files": [
      "test/**/*.test.js",
      "src/**/*.unit.js"
    ],
    "require": [
      "esm"
    ],
    "babel": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard"
    ],
    "env": {
      "es6": true,
      "node": true
    },
    "globals": {
      "BigInt": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm run lint && npm run build:wcoverage && npm run test",
      "precommit": "npm run --silent build > /dev/null 2>&1 && git add ."
    },
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "section": "Chore"
      },
      {
        "type": "docs",
        "section": "Docs"
      },
      {
        "type": "refactor",
        "section": "Refactor"
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "perf",
        "hidden": true
      },
      {
        "type": "test",
        "section": "Tests"
      }
    ]
  }
}
